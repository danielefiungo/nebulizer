{
  "name": "nebula-service",
  "version": "1.0.0",
  "description": "Saying connect, is soo simple!",
  "readmeFilename": "README.md",
  "main": "./dist/index.js",
  "private": false,
  "scripts": {
    "build": "npm run clean && npm run build-ts && npm run lint",
    "clean": "rimraf dist",
    "build-ts": "tsc",
    "debug": "npm run build-ts && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --fix",
    "serve": "node dist/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "start": "npm run serve",
    "jest": "jest --watch --verbose",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"srv,tsc\" -c \"yellow.bold,cyan.bold\" -i \"npm run watch-node\" \"npm run watch-ts\" ",
    "watch-debug": "concurrently -k -i -p \"[{name}]\" -n \"srv,tsc\"  -c \"yellow.bold,cyan.bold\" \"npm run serve-debug\" \"npm run watch-ts\" ",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "author": {
    "name": "Daniele Fiungo",
    "email": "danielefiungo@gmail.com"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=6.4.1"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.5.0",
    "@hapi/joi": "^17.1.1",
    "@types/tar": "^4.0.4",
    "body-parser": "^1.19.0",
    "celebrate": "^13.0.4",
    "cors": "^2.8.5",
    "debug": "~4.3.1",
    "dotenv-safe": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "~4.17.1",
    "express-pino-logger": "^5.0.0",
    "fs-extra": "^9.0.1",
    "helmet": "^4.3.1",
    "http-status": "^1.5.0",
    "pino": "^6.9.0",
    "shortid": "^2.2.16",
    "tar": "^6.0.5",
    "ts-essentials": "^7.0.1",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/debug": "^4.1.5",
    "@types/dotenv-safe": "^8.1.1",
    "@types/express": "^4.17.9",
    "@types/express-pino-logger": "^4.0.2",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.166",
    "@types/node": "^14.14.17",
    "@types/pino": "^6.3.4",
    "@types/prettier": "^2.1.6",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.2",
    "pino-pretty": "^3.6.1",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "activationEvents": [
    "workspaceContains:node_modules/.bin/jest",
    "workspaceContains:node_modules/react-scripts/node_modules/.bin/jest",
    "workspaceContains:node_modules/react-native-scripts",
    "onCommand:io.orta.jest.start"
  ]
}
